<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hospital.UI.TomaSignosController">
    <Label text="Gestión de Toma de Signos" style="-fx-font-size: 18px;"/>
    <HBox spacing="10">
        <Label text="Paciente ID:"/>
        <TextField fx:id="pacienteIdField" promptText="Ingrese el ID del paciente"/>
        <Button text="Buscar" onAction="#buscarTomaSignos"/>
    </HBox>
    <TableView fx:id="tomaSignosTable">
        <columns>
            <TableColumn text="ID" fx:id="idColumn"/>
            <TableColumn text="Fecha" fx:id="fechaColumn"/>
            <TableColumn text="Descripción" fx:id="descripcionColumn"/>
        </columns>
    </TableView>
    <HBox spacing="10">
        <Button text="Agregar" onAction="#agregarTomaSignos"/>
        <Button text="Actualizar" onAction="#actualizarTomaSignos"/>
        <Button text="Eliminar" onAction="#eliminarTomaSignos"/>
    </HBox>
</VBox>
