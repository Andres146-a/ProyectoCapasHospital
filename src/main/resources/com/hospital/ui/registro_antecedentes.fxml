<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hospital.UI.RegistroAntecedentesController">
    <Label text="Apertura de Ficha Médica" GridPane.columnSpan="2" style="-fx-font-size: 20px; -fx-font-weight: bold;" GridPane.halignment="CENTER" />

    <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="txtNombre" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <Label text="Apellido:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <TextField fx:id="txtApellido" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <Label text="Edad:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <TextField fx:id="txtEdad" GridPane.rowIndex="3" GridPane.columnIndex="1" />

    <Label text="Antecedentes Personales:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <TextArea fx:id="txtAntecedentesPersonales" GridPane.rowIndex="4" GridPane.columnIndex="1" />

    <Label text="Antecedentes Patológicos:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
    <TextArea fx:id="txtAntecedentesPatologicos" GridPane.rowIndex="5" GridPane.columnIndex="1" />

    <Label text="Antecedentes Clínicos:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
    <TextArea fx:id="txtAntecedentesClinicos" GridPane.rowIndex="6" GridPane.columnIndex="1" />

    <Label text="Antecedentes Gineco-Obstétricos:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
    <TextArea fx:id="txtAntecedentesGinecoObstetricos" GridPane.rowIndex="7" GridPane.columnIndex="1" />

   <Button text="Guardar" onAction="#guardarAntecedente" GridPane.rowIndex="8" GridPane.columnSpan="2" GridPane.halignment="CENTER" />

</GridPane>
