<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hospital.UI.ConsultaMedicaController">
    <Label text="Consultas Médicas" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TableView fx:id="consultasTable" prefHeight="400" onMouseClicked="#volverDashboard">
        <columns>
            <TableColumn text="ID" fx:id="idColumn" prefWidth="100"/>
            <TableColumn text="Paciente" fx:id="pacienteColumn" prefWidth="150"/>
            <TableColumn text="Doctor" fx:id="doctorColumn" prefWidth="150"/>
            <TableColumn text="Fecha" fx:id="fechaColumn" prefWidth="150"/>
            <TableColumn text="Descripción" fx:id="descripcionColumn" prefWidth="200"/>
        </columns>
    </TableView>
    <HBox spacing="10" alignment="CENTER_RIGHT">
    <Button text="Regresar" 
            onAction="#volverDashboard" 
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
</HBox>

</VBox>
